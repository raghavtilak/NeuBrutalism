<?xml version="1.0" encoding="utf-8"?>
<com.raghav.neubrutalism.NeuBrutalismView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/foreview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="center"
    app:bg_marginStart="6dp"
    app:bg_marginTop="8dp"
    app:bg_shadowColor="@color/black"
    app:fg_color="#FFC500"
    app:fg_strokeColor="@color/black"
    app:fg_strokeWidth="0dp"
    app:pressable="false"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:orientation="vertical">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/neubrutalism_font_1_bold"
            android:padding="10dp"
            android:text="Brutalism Dialog"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/neubrutalism_font_1_light"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="This is a sample dialog box utilising brutalism UI."
            android:textColor="@color/black"
            android:textSize="22sp" />

        <com.raghav.neubrutalism.NeuBrutalismView
            android:id="@+id/tryNowBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            app:fg_color="#B851FD"
            app:fg_strokeWidth="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/neubrutalism_font_1_bold"
                android:padding="7dp"
                android:text="Try Now!"
                android:textColor="@color/white" />
        </com.raghav.neubrutalism.NeuBrutalismView>
    </LinearLayout>
</com.raghav.neubrutalism.NeuBrutalismView>
